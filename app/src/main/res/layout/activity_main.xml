<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="viewModel"
            type="com.example.myapplication.viewModel.ControlsViewModel"/>
        <variable
            name="ipUser"
            type="String"/>
        <variable
            name="portUser"
            type="Integer"/>
        <variable
            name="rudderUser"
            type="Float"/>
        <variable
            name="throttleUser"
            type="Float"/>

    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/activity_main_scene"
        tools:context=".views.MainActivity">

        <ImageView
            android:id="@+id/im1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/airplane"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="345dp"
            android:layout_height="61dp"
            android:layout_marginTop="16dp"
            android:text="Welcome to our app!"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/portText"
            android:layout_width="235dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.84"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.254"/>

        <TextView
            android:id="@+id/IP"
            android:layout_width="130dp"
            android:layout_height="53dp"
            android:layout_marginTop="112dp"
            android:text="IP"
            android:textColor="#040404"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.145"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/ipText"
            android:layout_width="251dp"
            android:layout_height="42dp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="577dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="#020202"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ConnectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="240dp"
            android:text="Connect"
            android:onClick="@{() -> viewModel.VM_Connect(ipUser, portUser)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/disconnectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="240dp"
            android:onClick="@{() -> viewModel.VM_Disconnect()}"
            android:text="Disconnect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Port"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:text="Port"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.245" />

        <SeekBar
            android:id="@+id/rudder"
            android:layout_width="325dp"
            android:layout_height="78dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="625dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="28dp"
            android:max="1"
            android:min="-1"
            android:onClick="@{() -> viewModel.setVM_Rudder(rudderUser)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <SeekBar
            android:id="@+id/throttle"
            android:layout_width="317dp"
            android:layout_height="80dp"
            android:layout_marginTop="444dp"
            android:layout_marginBottom="207dp"
            android:max="1"
            android:min="0"
            android:onClick="@{() -> viewModel.setVM_Throttle(throttleUser)}"
            android:rotation="-90"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-115dp" />

        <com.example.myapplication.views.Joystick
            android:id="@+id/joystickView"
            android:layout_width="260dp"
            android:layout_height="167dp"
            android:foregroundGravity="center"
            android:visibility="visible"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="398dp" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>
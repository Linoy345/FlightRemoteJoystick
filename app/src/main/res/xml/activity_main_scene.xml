<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_editor_absoluteY="45dp"
            android:layout_height="match_parent"
            motion:layout_editor_absoluteX="16dp"
            android:layout_width="match_parent"
            android:id="@+id/im1" />
        <Constraint
            android:layout_height="46dp"
            android:layout_marginTop="232dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="128dp"
            android:id="@+id/ConnectButton"
            android:layout_marginEnd="224dp"
            android:layout_marginRight="224dp"
            motion:layout_editor_absoluteX="59dp"
            motion:layout_editor_absoluteY="234dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="232dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.517"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_marginStart="140dp"
            android:id="@+id/disconnectButton" />
        <Constraint
            motion:layout_editor_absoluteY="324dp"
            android:layout_height="301dp"
            motion:layout_editor_absoluteX="33dp"
            android:layout_width="314dp"
            android:id="@+id/joystickView" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>